<div class="veneration card">
  <div class="card-image">
    <figure class="image">
      <%= link_to image_tag(veneration.image), veneration %>
    </figure>
  </div>
  <div class="card-content">
    <div class="content">
      <blockquote>
        <%= veneration.caption %>
      </blockquote>
    </div>
  </div>
  <footer class="card-footer">
    <p class="card-footer-item">
      <span class="author">
        Uploaded by <strong><%= veneration.user.name %></strong>
      </span>
    </p>
    <p class="card-footer-item">
      <%= score_tag veneration.score %>
    </p>
  </footer>
</div>
